{
  // basics
  "terminal.explorerKind": "external",
  "workbench.settings.editor": "json",
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": false,
  "editor.minimap.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
  "zenMode.fullScreen": false,
  "zenMode.hideTabs": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideLineNumbers": false,
  "editor.fontSize": 14,
  "editor.renderWhitespace": "all",
  "workbench.editor.revealIfOpen": true,
  "emmet.showAbbreviationSuggestions": false,
  "emmet.showExpandedAbbreviation": "never",
  "editor.suggestSelection": "first",
  "references.preferredLocation": "view",
  "editor.definitionLinkOpensInPeek": false,
  "editor.insertSpaces": true,
  "gitlens.mode.active": "review",
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "window.restoreWindows": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "git.allowForcePush": true,
  "workbench.editor.openPositioning": "last",


  // vim
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],

  // typescipt / es
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.useAliasesForRenames": false,
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "typescript.updateImportsOnFileMove.enabled": "prompt",

  // prettier / language formatters
  "prettier.proseWrap": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[fsharp]": {
    "editor.formatOnSave": false
  },
  "[csharp]": {
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrapColumn": 800
  },
  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },

  // ruby
  "files.associations": {
    "Matchfile": "ruby",
    "Gymfile": "ruby",
    "*.erb": "erb"
  },

  "gitlens.views.showRelativeDateMarkers": false,
  "gitlens.views.branches.pullRequests.showForBranches": false,
  "gitlens.views.branches.pullRequests.enabled": false,
  "gitlens.views.branches.avatars": false,
  "svelte.enable-ts-plugin": true,
  "diffEditor.renderSideBySide": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "Ô∏è": true
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,

  // dart
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],

    "editor.selectionHighlight": false,

    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
  },
  "window.zoomLevel": 1,

  // new settings
}
